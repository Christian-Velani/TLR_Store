@model DLC
<style>
    .container-DLC {
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100vh;
  }

  .edit-form-DLC {
    width: 600px;
    background-color: #fff;
    border-radius: 8px;
    padding: 40px;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.3);
  }

  .edit-form-DLC h1 {
    text-align: center;
    margin-bottom: 20px;
    color: #333;
  }

  .edit-form-DLC label {
    display: block;
    margin-bottom: 10px;
    color: #555;
    font-size: 14px;
    font-weight: bold;
  }

  .edit-form-DLC input,
  .edit-form-DLC textarea {
    width: 100%;
    padding: 10px;
    margin-bottom: 20px;
    border: none;
    border-radius: 4px;
    background-color: #e9e9e9;
    color: #333;
    font-size: 16px;
  }

  .edit-form-DLC input[type="file"] {
    cursor: pointer;
  }

  .edit-form-DLC input[type="submit"] {
    background-color: #3d8af7;
    color: #fff;
    border: none;
    border-radius: 4px;
    padding: 12px 20px;
    font-size: 16px;
    cursor: pointer;
  }

  .edit-form-DLC input[type="submit"]:hover {
    background-color: #3268c7;
  }

  .edit-form-DLC .file-upload-label {
    display: inline-block;
    padding: 10px 15px;
    background-color: #3d8af7;
    color: #fff;
    border-radius: 4px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .edit-form-DLC .file-upload-label:hover {
    background-color: #3268c7;
  }

  .edit-form-DLC .file-upload-input {
    display: none;
  }

  .edit-form-DLC .file-name {
    font-size: 14px;
    color: #777;
    margin-top: 5px;
  }

  .file-upload-DLC, .image-preview-DLC {
    display: inline-block;
    width: 50%;
    vertical-align: top;
  }

  .image-preview-DLC img {
    max-width: 300px;
    max-height: 300px;
  }
</style>
@{
    ViewData["Title"] = "Editar DLC";
}
<div class="container-DLC">
  <form class="edit-form-DLC" method="POST" action="/DLC/Atualizar/?idDLC=@Model.IdComplemento" enctype="multipart/form-data">
    <h1>Editar DLC</h1>
    <label for="imagem">Imagem</label>
    <div class="file-upload-DLC">
      <input type="file" name="Imagem" value="@Model.Imagem">
    </div>
    <div class="image-preview-DLC">
      <label>Imagem Atual</label>
      <img src="data:image/jpeg;base64,@Convert.ToBase64String(@Model.Imagem)"/>
    </div>
    <label for="nome">Nome do Complemento</label>
    <input type="text" id="nome" name="nomeComplemento" value="@Model.NomeComplemento" required>
    <label for="descricao">Descrição</label>
    <textarea id="descricao" name="descricao" rows="4" required>@Model.Descricao</textarea>
    <label for="preco">Preço</label>
    <input type="text" id="preco" name="preco" value="@Model.Preco" required>
    <label for="desconto">Desconto</label>
    <input type="text" id="desconto" name="desconto" value="@Model.Desconto" required>
    <input type="submit" value="Confirmar">
  </form>
</div>
