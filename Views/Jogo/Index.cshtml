<!DOCTYPE html>
<html>
    <head>
        <title>Lista de Jogos Cadastrados</title>
        <style>
            body {
                background: linear-gradient(to bottom, #000000, #08003d, #000000); /* degrade fundo */
                color: #fffdfd;
                font-family: "Andada Pro", Andada Pro; /* fonte letras */
                margin: 0;
                padding: 0;
            }
        
            .container {
                margin: 50px;
                padding: 20px;
                color: #fffdfd;
            }

            h1 {
                font-size: 24px;
                margin-bottom: 20px;
            }

            table {
                width: 100%;
                border-collapse: collapse;
            }

            th, td {
                padding: 10px;
                border-bottom: 1px solid #ddd;
            }

            th {
                background-color: #000000;
                font-weight: bold;
            }

            .game-image {
                width: 300px;
                height: 300px;
                object-fit: cover;
            }

            .btn {
                display: inline-block;
                padding: 8px 16px;
                margin-right: 10px;
                border-radius: 4px;
                text-decoration: none;
                color: #fff;
                background-color: #007bff;
                border: none;
            }

            .btn.btn-warning {
                background-color: #ffc107;
            }

            .btn.btn-danger {
                background-color: #dc3545;
            }

            .search-container {
            display: flex;
            align-items: center;
            max-width: 300px;
            margin: 20px auto;
            padding: 10px;
            background-color: #f5f5f5;
            border: 1px solid #ddd;
            border-radius: 4px;
            }

            .search-input {
                flex: 1;
                border: none;
                padding: 8px;
                font-size: 16px;
            }

            .search-button {
                background-color: #007bff;
                color: #fff;
                border: none;
                padding: 8px 16px;
                border-radius: 4px;
                cursor: pointer;
            }

        </style>
    </head>

    <body>
        <div class="search-container">
            <input class="search-input" type="text" placeholder="Digite sua busca...">
            <button class="search-button" type="submit" style="background-color:rgb(0, 0, 0); border-color:rgb(255, 255, 255); 
            color:white">Buscar</button>
        </div>
        <div class="container">
            <h1>Lista de Jogos Cadastrados</h1>
            <table>
                <tr>
                    <th>Código</th>
                    <th>Nome</th>
                    <th>Imagem</th>
                    <th>Descrição</th>
                    <th>Preço</th>
                    <th>Data de Lançamento</th>
                    <th>Classificação Indicativa</th>
                    <th>Requisitos</th>
                    <th></th>
                    <th></th>
                </tr>
                @foreach(var jogo in Model)
                {
                    <tr>
                        <td>@jogo.JogoId</td>
                        <td>@jogo.Nome</td>
                        <td><img class="game-image" src="data:image/jpeg;base64,@Convert.ToBase64String(jogo.Imagem)" /></td>
                        <td>@jogo.Descricao</td>
                        <td>@jogo.Preco</td>
                        <td>@jogo.DataLancamento</td>
                        <td>@jogo.ClassificacaoIndicativa</td>
                        <td>@jogo.Requisito</td>
                        <td><a class="btn btn-warning" href="/Jogo/Edit?jogoId=@jogo.JogoId">Editar</a></td>
                        <td>
                            <form method="post" action="/Jogo/Delete">
                                <input type="hidden" name="jogoId" value="@jogo.JogoId" />
                                <button type="submit" class="btn btn-danger">Deletar</button>
                            </form>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </body>
</html>