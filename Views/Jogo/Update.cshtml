@{
    Layout = "/Views/Shared/_LayoutAdmin.cshtml";
}
@model Jogo;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Atualizar Jogo</title>
    <style>
     
        body {
            background: linear-gradient(to bottom, #000000, #08003d, #000000); /* degrade fundo */
            color: #fffdfd;
            font-family: "Andada Pro", Andada Pro; /* fonte letras */
            color: #fff9f9;
            margin: 0;
            padding: 0;
        }

       
        .container {
            display: flex;
            justify-content: center;
            align-items: center;
             /* height: 300vh;     localização do cadastrador */
            padding-top: 10px; /* superior */
            margin-top: 10px;
            padding-bottom: 10px; /* inferior*/
            margin-bottom: 10px;
        }

        .register-form {
            /* degrade meio */
            padding: 40px;
            border-radius: 15px; /* curvatura meio */
            text-align: center;
            max-width: 800px; /* largura meio */
            margin: 0 auto;
            /* border: 1px solid #ffffff; contorno */;
        }

        .register-form h1 {
            margin-bottom: 10px;
        }
        
        .register-form h2 {
            margin-bottom: 0px;
            padding: 10px;
            width: 300px; /* Defina a largura desejada para os títulos */
            text-align: left; /* Alinhe o texto à esquerda */
            font-size: 20px;
            
        }
        .register-form h3 {
            margin-bottom: 0px;
            padding: 10px;
            width: 300px; /* Defina a largura desejada para os títulos */
            text-align: left; /* Alinhe o texto à esquerda */
            font-size: 15px;
            
        }

        .register-form input,
        .register-form textarea {
            width: 95%;
            padding: 15px;
            margin-bottom: 15px;
            border-radius: 4px;
            border: none;
            color: rgb(255, 255, 255)000;
            background-color: rgba(255, 255, 255, 0.795);
            box-shadow: 3px 3px 4px rgba(0, 0, 0, 0.849); /* inf gerais */
        }
        
        .register-form input[type="submit"] { /* botão */
            background-color: #001866;  
            color: #fff;
            cursor: pointer;
        } 

        .register-form input[type="submit"]:hover { /* botão */
            background-color: #00318d;
        }

        .register-form textarea {
            height: 100px;
        }

        ::-webkit-input-placeholder {
            color: #000000;
        }

        ::-moz-placeholder {
            color: #000000;
        }

        :-ms-input-placeholder {
            color: #000000;
        }

        ::placeholder {
            color: #0c0c0c7c; /* dentro letras */
        }
        
        .genre-label {
            display: inline-block;
            margin-right: 10px;
        }
    
        .genre-container {
            display: flex;
            flex-wrap: wrap;
            
        }
        .genre-item { /*letrA BOX cor*/  
            flex-basis: 50%;
        }

    .type-label {
      display: inline-block;
      margin-right: 10px;
    }

    .type-container {
      display: flex;
      flex-wrap: wrap;
      height: 300px;
      overflow-y: scroll;
    
    }
    .type-item { /*letrA BOX cor*/  
      flex-basis: 50%;
    }
    .empresa-label {
      display: inline-block;
      margin-right: 10px;
    }

    .empresa-container {
      display: flex;
      flex-wrap: wrap;
      height: 300px;
      overflow-y: scroll;
    
    }
    .empresa-item { /*letrA BOX cor*/  
      flex-basis: 50%;
    }
    .cadastro-button {
      display: inline-block;
      background-color: #4CAF50;
      border: none;
      color: white;
      padding: 10px 20px;
      text-align: center;
      text-decoration: none;
      font-size: 16px;
      margin: 4px 2px;
      cursor: pointer;
      border-radius: 4px;
    }

    .cadastro-button:hover {
      background-color: #45a049;
    }

    .text-area {
      overflow-y: scroll;
    }

    .image-preview img {
    max-width: 300px;
    max-height: 300px;
    }

        .game-card {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin: 20px auto;
            max-width: 1200px;
        }

        .game-card-item {
            width: 200px;
            padding: 10px;
        }

        .game-card-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .game-card-title {
            margin-top: 10px;
            font-weight: bold;
        }

        .game-card-description {
            margin-top: 5px;
            color: #aaaaaa;
        }
        .game-card-valor {
            margin-bottom: 10px;
            font-weight: bold;
        }

        .game-card-dlc {
            margin-bottom: 10px;
        }

        .game-card-button {
            background-color: #003cac;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            font-size: 14px;
            cursor: pointer;
            margin-bottom: 10px;
        }
        .game-card-button1 {
            background-color: #740000;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            font-size: 14px;
            cursor: pointer;
            margin-bottom: 10px;
        }
    </style>
</head>
<body>
    <div class="container">
        <form class="register-form" method="POST" action="/Jogo/Update/?idJogo=@Model.JogoId" enctype="multipart/form-data">

        <h1>Editar Jogo</h1>

        <h2>Nome</h2>
        <input type="text" placeholder="Nome completo do Jogo" required id="nome" name="Nome" value="@Model.Nome"><br>

        <h2>Descrição</h2>
        <textarea class="text-area" rows="5" cols="80" required id="descricao" name="Descricao">@Model.Descricao</textarea>

        <h2>Gênero</h2>
        <div class="genre-container">
            @foreach (Genero genero in ViewBag.generos)
            {
                if(@Model.Genero.Contains(genero))
                {
                    <div class="genre-item">
                        <input type="checkbox" name="generos" value="@genero.IdGenero" checked>
                        <label>@genero.NomeGenero</label>
                    </div>
                } else {
                    <div class="genre-item">
                        <input type="checkbox" name="generos" value="@genero.IdGenero">
                        <label>@genero.NomeGenero</label>
                    </div>
                }
            }
        </div>
        <a class="cadastro-button" href="/Genero/Cadastrar">Cadastrar um novo Gênero</a>

        <h2>Tipos</h2>
        <div class="type-container">
            @foreach (Tipo tipo in ViewBag.tipos)
            {
                if(@Model.Tipo.Contains(tipo))
                {
                    <div class="type-item">
                        <input type="checkbox" name="tipos" value="@tipo.IdTipo" checked>
                        <label>@tipo.NomeTipo</label>
                    </div>
                } else {
                    <div class="type-item">
                        <input type="checkbox" name="tipos" value="@tipo.IdTipo">
                        <label>@tipo.NomeTipo</label>
                    </div>
                }
            }
        </div>
        <a class="cadastro-button" href="/Tipo/Cadastrar">Cadastrar um novo Tipo</a>

        <h2>Desenvolvedora</h2>
        <div class="empresa-container">
            @foreach (Empresa desenvolvedora in ViewBag.empresas)
            {
                if(@Model.Desenvolvedora.Contains(desenvolvedora))
                {
                    <div class="empresa-item">
                        <input type="checkbox" name="desenvolvedoras" value="@desenvolvedora.IdEmpresa" checked>
                        <label>@desenvolvedora.NomeEmpresa</label>
                    </div>
                } else {
                    <div class="empresa-item">
                        <input type="checkbox" name="desenvolvedoras" value="@desenvolvedora.IdEmpresa">
                        <label>@desenvolvedora.NomeEmpresa</label>
                    </div>
                }
            }
        </div>

        <h2>Distribuidora</h2>
        <div class="empresa-container">
            @foreach (Empresa distribuidora in ViewBag.empresas)
            {
                if(@Model.Distribuidora.Contains(distribuidora))
                {
                    <div class="empresa-item">
                        <input type="checkbox" name="distribuidoras" value="@distribuidora.IdEmpresa" checked>
                        <label>@distribuidora.NomeEmpresa</label>
                    </div>
                } else {
                    <div class="empresa-item">
                        <input type="checkbox" name="distribuidoras" value="@distribuidora.IdEmpresa">
                        <label>@distribuidora.NomeEmpresa</label>
                    </div>
                }
            }
        </div>
        <a class="cadastro-button" href="/Empresa/Cadastrar">Cadastrar uma nova Empresa</a>

        <h2>Data de Lançamento</h2>
        <input type="date" name="DataLancamento" value="@Model.DataLancamento">

        <h2>Requisitos</h2>
        <textarea class="text-area" rows="5" cols="80" name="requisito">@Model.Requisito</textarea>

        <h2>Classificação Indicativa</h2>
        <select name="classificacaoIndicativa">
            <option value="3">Livre</option>
            <option value="7">7 anos</option>
            <option value="12">12 anos</option>
            <option value="16">16 anos</option>
            <option value="18">18 anos</option>
        </select>

        <h2>Preço</h2>
        <input type="decimal" placeholder="00,00" required name="Preco" value="@Model.Preco">

        <h2>Desconto</h2>
        <input type="number" min="0" max="100" name="Desconto" value="@Model.Desconto">

        <h2>Status</h2>
        <input type="number" min="0" max="1" name="Status" value=@Model.Status>

        <h2>Complementos</h2>
        @foreach (DLC complemento in @Model.Complemento)
        {
            <div class="game-card-item">
                <img class="game-card-image" src="data:image/jpeg;base64,@Convert.ToBase64String(@complemento.Imagem)" href="/DLC/Detalhes/?idComplemento=@complemento.IdComplemento">
                <div class="game-card-title">@complemento.NomeComplemento</div>
                <button class="game-card-button" href="/DLC/Cadastrar?jogoId=@Model.JogoId">Cadastrar nova DLC</button>
            </div>
        }

        <h2>Capa do Jogo</h2>
        <div class="image-preview">
              <label>Imagem Atual</label>
              <img src="data:image/jpeg;base64,@Convert.ToBase64String(@Model.Imagem)"/>
        </div>
        <input type="file" name="Imagem">
        <br>
        <input type="submit" value="Atualizar">
        </form>
    </div>
</body>
</html>