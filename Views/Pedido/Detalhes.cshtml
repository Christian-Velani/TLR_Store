@Model Pedido
<!DOCTYPE html>
<html>
<head>
  <title>Tela de Pedido</title>
  <style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #1b2838;
    color: #fff;
  }

  h1 {
    text-align: center;
    font-size: 28px;
    margin-bottom: 30px;
  }

  .pedido-info {
    margin-bottom: 30px;
  }

  strong {
    color: #f2a900;
  }

  .produto-lista {
    list-style-type: none;
    padding: 0;
  }

  .produto-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 15px;
  }

  .produto-nome {
    font-weight: bold;
    color: #fff;
  }

  .produto-valor {
    color: #f2a900;
  }
  </style>
</head>
<body>
  <h1>Detalhes do Pedido</h1>

  <div class="pedido-info">
    <strong>ID do Pedido:</strong> <span id="id-pedido">@Model.IdPedido</span><br>
    <strong>Meio de Pagamento:</strong> <span id="meio-pagamento">@Model.MeioPagamento</span><br>
    <strong>Data da Compra:</strong> <span id="data-compra">@Model.DataCompra.ToString("dd/MM/yyyy")</span><br>
    <strong>Valor da Compra:</strong> <span id="valor-compra">@Model.ValorCompra.ToString("0.00")</span><br>
  </div>

  <h2>Produtos Adquiridos</h2>

  <ul class="produto-lista" id="produtos-adquiridos">
    @foreach (var produto in Model.Produtos)
    {
      <li class="produto-item">
        <span class="produto-nome">@produto.Nome</span>
        <span>R$@produto.Valor.ToString("0.00")</span>
      </li>
    }
  </ul>
</body>
</html>
