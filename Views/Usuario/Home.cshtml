@using Microsoft.AspNetCore.Http
@using System.Text.Json;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

 @{
        string? session = HttpContextAccessor.HttpContext.Session.GetString("usuario");
        Usuario? usuario = JsonSerializer.Deserialize<Usuario>(session);
        Layout = "/Views/Shared/_LayoutComum.cshtml";
    }

<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tela Inicial</title>
    <style>
        body {
            background: linear-gradient(to bottom, #000000, #08003d, #000000);
            color: #fffdfd;
            font-family: "Andada Pro", Andada Pro;
            color: #fff9f9;
            margin: 0;
            padding: 100px;
        }

        .header {
            background: linear-gradient(to bottom, #08003d, #08003d, #000000); 
            color: #fff;
            padding: 50px;
            text-align: center;
        }
        .header h1{
           
            padding: 100px;
            text-align: center;
        } 

        .menu {
            display: flex;
            justify-content: space-between;
            background-color: #000000;
            color: #fff;
            padding: 10px;
            
            align-items: center;
        }

        .search-container {
            display: flex;
            align-items: center;
            max-width: 500px;
            margin: 10px;
            padding: 5px;
            background-color: #ffffff;
            border-radius: 4px;
        }

        .search-input {
            flex: 1;
            border: none;
            padding: 8px;
            font-size: 16px;
        }

        
        .search-button {
            background-color: #000000;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
        }

        .search-button:hover {
            background-color: #00438b;
        }

        .profile-button {
            display: flex;
            align-items: center;
            margin-right: 0px;
            cursor: pointer;
        }

        .profile-image {
            width: 30px;
            height: 30px;
            border-radius: 50%;
            margin-right: 5px;
        }

        .profile-nick {
            font-weight: bold;
        }

        .options-container {
            display: flex;
            align-items: center;
        }

        .option {
            margin-right: 10px;
            cursor: pointer;
        }

        .option:hover {
            text-decoration: underline;
        }

        .filters {
            display: flex;
            justify-content: center;
            margin: 10px auto;
        }

        .filter-select {
            margin-top: 10px;
            padding: 5px 10px;
            border-radius: 4px;
            border: none;
            background-color: #ffffff;
            color: #000000;
            cursor: pointer;
        }

        .filter-select:hover {
            background-color: #0056b3;
        }

        .game-card {
            display: flex;
            flex-wrap: wrap;
            justify-content: center;
            margin: 20px auto;
            max-width: 1200px;
        }

        .game-card-item {
            width: 200px;
            padding: 10px;
        }

        .game-card-image {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .game-card-title {
            margin-top: 10px;
            font-weight: bold;
        }

        .game-card-description {
            margin-top: 5px;
            color: #aaaaaa;
        }
        .game-card-valor {
            margin-bottom: 10px;
            font-weight: bold;
        }

        .game-card-dlc {
            margin-bottom: 10px;
        }

        .game-card-button {
            background-color: #003cac;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            font-size: 14px;
            cursor: pointer;
            margin-bottom: 10px;
        }
        .game-card-button1 {
            background-color: #740000;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            font-size: 14px;
            cursor: pointer;
            margin-bottom: 10px;
        }
    </style>
</head>
    <body>
    <form class="register-form" method="POST" action="/Usuario/Pesquisar">
        </div>
        <div class="menu">
            <div class="search-container">
                <input class="search-input" type="text" placeholder="Digite sua busca..." name="search">
                <button class="search-button" type="submit">
                    Buscar
                </button>
            </div>
        </div>
        <div class="filters">
            <select class="filter-select" name="TiposId">
                <option value="">Tipo</option>
                @foreach(Tipo tipo in ViewBag.tipos)
                {
                    <option value=@tipo.IdTipo>@tipo.NomeTipo</option>
                }
            </select>
            <select class="filter-select" name="GenerosId">
                <option value="">GÃªnero</option>
                @foreach (Genero genero in ViewBag.generos)
                {
                    <option value=@genero.IdGenero>@genero.NomeGenero</option>
                }
            </select>
            <select class="filter-select" name="EmpresasId">
                <option value="">Empresas</option>
                @foreach (Empresa empresa in ViewBag.empresas)
                {
                    <option value=@empresa.IdEmpresa>@empresa.NomeEmpresa</option>
                }
            </select>
        </div>
    </div>
        <div class="game-card">
            @{
                if (ViewBag.jogosAux != null)
                {
                    foreach(Jogo jogo in ViewBag.jogosAux)
                    {
                        <div class="game-card-item">
                            <img class="game-card-image" src="data:image/jpeg;base64,@Convert.ToBase64String(@jogo.Imagem)" href="/Jogo/Detalhes/?idJogo = @jogo.JogoId">
                            <div class="game-card-title">@jogo.Nome</div>
                            <button class="game-card-button" href="/Carrinho/Adicionar">Adicionar ao Carrinho</button>
                        </div>
                    }
                }
                else
                {
                    foreach(Jogo jogo in ViewBag.jogos)
                    {
                        <div class="game-card-item">
                            <img class="game-card-image" src="data:image/jpeg;base64,@Convert.ToBase64String(@jogo.Imagem)" href="/Jogo/Detalhes/?idJogo = @jogo.JogoId">
                            <div class="game-card-title">@jogo.Nome</div>
                            <button class="game-card-button" href="/Carrinho/Adicionar">Adicionar ao Carrinho</button>
                        </div>
                    }
                }
            }
        </div>
    </form>
    </body>
</html>